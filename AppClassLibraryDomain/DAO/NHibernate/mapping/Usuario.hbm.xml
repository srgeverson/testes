<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="WindowsForms.domain.model.Usuario" namespace="WindowsForms.domain.model.Usuario"
					   >
	<class name="WindowsForms.domain.model.Usuario, Usuario" table="usuarios" lazy="true">
		<id name="Id" column="id" type="Int64" not-null="false">
			<generator class="native"/>
		</id>
		<property name="Nome" column ="nome" type="String" not-null="true"/>
		<property name="Senha" column ="senha" type="String" not-null="true"/>
		<property name="Ativo" column="ativo" type="Boolean" not-null="true"/>
		<property name="DataCriacao" column="dataCriacao" type="DateTime" not-null="true"/>
	</class>
</hibernate-mapping>